@model PatientHandlingSystem.ViewModels.PatientViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Patient</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Patient.FirstName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Patient.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Patient.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Patient.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Patient.LastName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Patient.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

            @for (int i = 0; i < Model.CompleteAttributes.Count; i++)
            {
                <div class="form-group">
                    @if (Model.CompleteAttributes[i].Attribute.Numeric)
                    {
                        @Html.LabelFor(x => x.CompleteAttributes[i].Attribute.Name, Model.CompleteAttributes[i].Attribute.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.HiddenFor(x => x.CompleteAttributes[i].Attribute.ID)
                        @Html.HiddenFor(x => x.CompleteAttributes[i].Attribute.Numeric)
                        <div class="col-md-1">
                            @Html.EditorFor(x => x.CompleteAttributes[i].SelectedAttributeValue.Value, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                        <div class="col-md-9"></div>
                    }
                    else
                    {
                        @Html.LabelFor(x => x.CompleteAttributes[i].Attribute.Name, Model.CompleteAttributes[i].Attribute.Name, htmlAttributes: new { style = "padding-top:0px", @class = "control-label col-md-2" })
                        @Html.HiddenFor(x => x.CompleteAttributes[i].Attribute.ID)
                        <div class="col-md-10">
                            @Html.DropDownListFor(x => x.CompleteAttributes[i].SelectedAttributeValue.ID, new SelectList(Model.CompleteAttributes[i].AttributeValues, "ID", "Value", "0"), new { @class = "form-control" } )
                        </div>
                    }
                </div>
            }
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

