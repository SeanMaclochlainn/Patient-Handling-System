@model PatientHandlingSystem.ViewModels.TreeCreatorViewModel

@{
    ViewBag.Title = "Edit";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<h2 style="text-align:center"><span id="title">@Model.Tree.Name</span> <button class="btn btn-sm" id="editName">Edit Name</button></h2>

<br />
<div class="container">
    <div class="row">
        <div class="col-md-3">
            @using (Ajax.BeginForm("UpdateTree", "Trees", new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "treeDiv" }))
            {
                <div class="container">
                    <div class="row" id="selectionDiv">
                        <div class="col-md-12" style="font-weight:bold;">
                            @Html.RadioButtonFor(i => i.SolutionInput, true, new { @class = "solutionTab" }) Solution
                            @Html.RadioButtonFor(i => i.SolutionInput, false, new { @class = "attributeTab" }) Attribute
                        </div>
                    </div>
                    <div class="row attribute top-buffer">
                        <div class="col-md-12">
                            @Html.HiddenFor(i => i.Tree.ID)
                            @Html.DropDownListFor(i => Model.SelectedAttribute.ID, new SelectList(Model.Attributes, "ID", "Name"), htmlAttributes: new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row attribute top-buffer">
                        <div class="col-md-12">
                            <button class="btn btn-default" id="button">Insert Node</button>
                        </div>
                    </div>
                    <div class="row attribute top-buffer">
                        <div class="col-md-12">
                            <button class="btn btn-default" id="button">Undo</button>
                        </div>
                    </div>
                    <div class="row solution top-buffer">
                        <div class="col-md-12 form-group">
                            @Html.TextAreaFor(i => i.Solution, new { @rows = "20", @placeholder = "Enter solution", @class = "form-control", style = "" })
                        </div>
                    </div>
                    <div class="row solution top-buffer">
                        <div class="col-md-12 form-group">
                            <input type="submit" value="Insert Solution" class="btn btn-default">
                        </div>
                    </div>
                </div>
            }
        </div>
        <div id="treeDiv" class="col-md-9">
            @Html.Partial("_Tree", Model.Nodes)
        </div>
    </div>
</div>
@Html.ActionLink("Back to List","Index")
<script>
        $(document).ready(function () {
            $(".solution").hide();
            $("#selectionDiv").click(function () {
                if ($(".attributeTab").is(":checked")) {
                    $(".attribute").show();
                    $(".solution").hide();
                    //console.log("attribute");
                }
                if ($(".solutionTab").is(":checked")) {
                    $(".solution").show();
                    $(".attribute").hide();

                    //console.log("solution");
                }
            });

            //edit name of tree
            $("#editName").click(function () {
                var tree_Name = prompt("Enter tree name", '@Model.Tree.Name');
                $.post("/Trees/EditTreeName", { "ID": @Model.Tree.ID, "Name": tree_Name });
                $("#title").text(tree_Name)
            })
        });
</script>
