@model PatientHandlingSystem.ViewModels.AttributeViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Attribute</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AttributeName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AttributeName)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Numeric)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Numeric)
        </dd>
    </dl>
    @if (!Model.Numeric)
    {
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.AttributeValues, "Attribute Values")
        </dt>

        <dd>
            @foreach (var i in Model.AttributeValues)
            {
                @i
                <br />
            }
        </dd>
    </dl>
    }
</div>
